<?xml version="1.0"?>
<configuration>

  <property>
    <name>dt.port.*.attr.QUEUE_CAPACITY</name>
    <value>8000</value>
  </property>
  <property>
    <name>dt.attr.CONTAINER_JVM_OPTIONS</name>
    <value>-Xloggc:&lt;LOG_DIR&gt;/gc.log -verbose:gc -XX:+PrintGCDetails -XX:+PrintGCDateStamps</value>
  </property>

  <!-- KafkaDataGenerator -->
  <property>
    <name>dt.application.KafkaDataGenerator.operator.InputGenerator.numTuplesPerWindow</name>
    <value>100000</value>
  </property>
  <property>
    <name>dt.application.KafkaDataGenerator.operator.kafkaOutput.prop.topic</name>
    <value>adtech</value>
  </property>

  <!-- adTechDemo Application -->
  <property>
    <name>dt.application.adTechDemo.operator.kafkaInput.prop.topics</name>
    <value>adtech</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.kafkaInput.prop.clusters</name>
    <value>node18.morado.com:9092</value>  <!-- broker (NOT zookeeper) address -->
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.csvParser.port.out.attr.TUPLE_CLASS</name>
    <value>com.datatorrent.demos.adtech.AdInfo</value>
  </property>

  <!-- FilterOperator -->
  <property>
    <name>dt.application.adTechDemo.operator.filterLocation.port.input.attr.TUPLE_CLASS</name>
    <value>com.datatorrent.demos.adtech.AdInfo</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.filterLocation.prop.condition</name>
    <value>({$}.getLocationID() != 13)</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.filterLocation.prop.expressionFunctionsItem[5]</name>
    <value>org.apache.commons.lang3.BooleanUtils.*</value>
  </property>

  <!-- POJOEnricher -->
  <property>
    <name>dt.application.adTechDemo.operator.Enrich.port.input.attr.TUPLE_CLASS</name>
    <value>com.datatorrent.demos.adtech.AdInfo</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.Enrich.port.output.attr.TUPLE_CLASS</name>
    <value>com.datatorrent.demos.adtech.AdInfo</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.Enrich.prop.store.fileName</name>
    <value>/tmp/enrichMapping.txt</value>
  </property>

  <!-- dimensions computing -->
  <property>
    <name>dt.application.adTechDemo.operator.Store.fileStore.basePath</name>
    <value>AdsDimensionsDemo/Store</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.DimensionsComputation.attr.PARTITIONER</name>
    <value>com.datatorrent.common.partitioner.StatelessPartitioner:8</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.DimensionsComputation.attr.MEMORY_MB</name>
    <value>6000</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.Store.embeddableQueryInfoProvider.topic</name>
    <value>AdTechDemo</value>
  </property>
  <property>
    <name>dt.operator.QueryResult.topic</name>
    <value>AdTechDemoQueryResult</value>
  </property>

  <!-- kafkainput operator -->
  <property>
    <name>dt.application.adTechDemo.operator.kafkaInput.attr.MEMORY_MB</name>
    <value>2048</value>
  </property>

  <property>
    <name>dt.application.adTechDemo.operator.Enrich.attr.MEMORY_MB</name>
    <value>2048</value>
  </property>
  <property>
    <name>dt.application.adTechDemo.operator.csvParser.attr.MEMORY_MB</name>
    <value>2048</value>
  </property>

  <!-- CsvParser -->
  <property>
    <name>dt.application.adTechDemo.operator.csvParser.attr.PARTITIONER</name>
    <value>com.datatorrent.common.partitioner.StatelessPartitioner:2</value>
  </property>
</configuration>

