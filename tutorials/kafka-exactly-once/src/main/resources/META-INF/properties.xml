<?xml version="1.0"?>
<configuration>

  <property>
    <name>dt.application.KafkaExactlyOnce.operator.passthrough.prop.directoryPath</name>
    <value>/kafka_exactly</value>
  </property>
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.lineInputOperator.prop.directory</name>
    <value>/kafka_exactly/inputLines.txt</value>
  </property>

  <!-- Topic names for the kafka output operators -->
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.kafkaExactlyOnceOutputOperator.prop.topic</name>
    <value>exactly-once</value>
  </property>
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.kafkaOutputOperator.prop.topic</name>
    <value>not-exactly-once</value>
  </property>

  <!-- CompareKafkaTopicsApplication: kafka input operator (0.9) -->
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.kafkaInput.prop.topics</name>
    <value>not-exactly-once,exactly-once</value>
  </property>
  <property>
  <name>dt.application.KafkaExactlyOnce.operator.kafkaInput.prop.clusters</name>
  <value>localhost:9092</value>  <!-- broker (NOT zookeeper) address -->
</property>
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.validationToFile.prop.outputFileName</name>
    <value>validation.txt</value>
  </property>
  <property>
    <name>dt.application.KafkaExactlyOnce.operator.validationToFile.prop.filePath</name>
    <value>target</value>
  </property>
</configuration>

